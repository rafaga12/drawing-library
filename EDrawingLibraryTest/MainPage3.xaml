<Page
    x:Class="App1.MainPage3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="Image1" HorizontalAlignment="Left" Height="568" Margin="100,100,0,0" VerticalAlignment="Top" Width="1166"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="1276,720,0,0" VerticalAlignment="Top" Click="SaveButton_Click"/>
        <Button x:Name="RenderButton" Content="Render" HorizontalAlignment="Left" Margin="1176,720,0,0" VerticalAlignment="Top" Click="RenderButton_Click"/>
        <Slider x:Name="TensionSlider" HorizontalAlignment="Left" Margin="1074,715,0,0" VerticalAlignment="Top" Width="100" Maximum="1" Value="0.5" TickFrequency="0.1" StepFrequency="0.1" SmallChange="0.1" LargeChange="1" ValueChanged="TensionSlider_ValueChanged"/>

    </Grid>
</Page>
